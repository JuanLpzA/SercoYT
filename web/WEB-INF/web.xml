        <servlet-class>com.sercoyt.controller.MarcaControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaControlador</servlet-name>
        <servlet-class>com.sercoyt.controller.CategoriaControlador</servlet-class>
