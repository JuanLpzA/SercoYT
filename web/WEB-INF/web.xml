    <servlet>
        <servlet-name>ServletContextProvider</servlet-name>
        <servlet-class>com.sercoyt.controller.ServletContextProvider</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.sercoyt.controller.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorIMG</servlet-name>
        <servlet-class>com.sercoyt.controller.ControladorIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioControlador</servlet-name>
