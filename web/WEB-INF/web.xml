        <servlet-name>CategoriaControlador</servlet-name>
        <url-pattern>/CategoriaControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardControlador</servlet-name>
        <url-pattern>/DashboardControlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
